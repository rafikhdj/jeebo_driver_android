<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.home.activity.OrderDeatilsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_menu"
        android:id="@+id/head"
        android:layout_height="@dimen/dp_60">

<com.app.jeebo.driver.view.CustomTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/sp_17"
    android:textColor="@color/white"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_centerHorizontal="true"
    android:gravity="center_horizontal"
    tools:text="Orderâ€™s Details"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/back_icon_white"
            android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@id/head"
        android:id="@+id/item_detail"
        android:elevation="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="@dimen/dp_70">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
           android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/iv_item"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/food_icon"/>

            <com.app.jeebo.driver.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_11"
                android:layout_toRightOf="@id/iv_item"
                android:textColor="@color/color_black"
                android:layout_marginLeft="@dimen/dp_22"
                android:letterSpacing="0.03"
               android:text="Food"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:id="@+id/ll_detail"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_below="@id/item_detail"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:elevation="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="@dimen/dp_76">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.app.jeebo.driver.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/color_black"
                    android:letterSpacing="0.03"
                   android:text="@string/e_shop_details"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_10"
            android:elevation="@dimen/dp_10"
            android:layout_height="@dimen/dp_76">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.app.jeebo.driver.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/color_black"
                    android:letterSpacing="0.03"
                    android:text="@string/client_details"
                    />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:elevation="@dimen/dp_10"
        android:id="@+id/card_layout_time"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_below="@id/ll_detail"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="@dimen/dp_53">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_22"
                android:id="@+id/iv_time"
                android:layout_centerVertical="true"
                android:src="@drawable/time"/>
            <com.app.jeebo.driver.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/color_black"
                android:layout_toRightOf="@id/iv_time"
                android:letterSpacing="0.03"
                android:text="@string/time_estimation"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:elevation="@dimen/dp_10"
        android:id="@+id/card_layout_payment"
        android:layout_marginTop="@dimen/dp_7"

        android:layout_below="@id/card_layout_time"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="@dimen/dp_53">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_centerVertical="true"
                android:id="@+id/iv_payment"
                android:src="@drawable/payment"/>
            <com.app.jeebo.driver.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/color_black"
                android:layout_toRightOf="@id/iv_payment"
                android:letterSpacing="0.03"
                android:text="@string/payment_methods"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <com.app.jeebo.driver.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
    android:gravity="center"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_below="@id/card_layout_payment"
        android:backgroundTint="@color/color_0B94C7"
        android:background="@drawable/rectangle_confirm"/>

</RelativeLayout>